---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
>
<channel>
  <title>{{ site.title | xml_escape }}</title>
  <atom:link href="{{ site.podcast.feed_url }}" rel="self" type="application/rss+xml" />
  <link>{{ site.url }}</link>
  <description>{{ site.description | xml_escape }}</description>
  <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
  <language>{{ site.lang }}</language>
  <generator>Jekyll</generator>
  <itunes:summary>{{ site.description | xml_escape }}</itunes:summary>
  <itunes:author>{{ site.podcast.author | xml_escape }}</itunes:author>
  <itunes:explicit>{{ site.podcast.explicit }}</itunes:explicit>
  <itunes:image href="{{ site.podcast.image }}" />
  <itunes:type>{{ site.podcast.type }}</itunes:type>
  <itunes:owner>
    <itunes:name>{{ site.podcast.author | xml_escape }}</itunes:name>
    <itunes:email>{{ site.podcast.email }}</itunes:email>
  </itunes:owner>
  <managingEditor>{{ site.podcast.email }} ({{ site.podcast.author }})</managingEditor>
  <copyright>{{ site.podcast.copyright | xml_escape }}</copyright>
  <itunes:subtitle>{{ site.description | xml_escape }}</itunes:subtitle>
  <image>
    <url>{{ site.podcast.image_small }}</url>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}</link>
  </image>
  <itunes:category text="{{ site.podcast.category }}">
    <itunes:category text="{{ site.podcast.subcategory }}" />
  </itunes:category>
  {% for post in site.posts %}
  <item>
    <title>{{ post.title | xml_escape }}</title>
    <link>{{ post.url | absolute_url }}</link>
    <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
    <guid isPermaLink="false">{{ post.guid }}</guid>
    <description>{{ post.content | xml_escape }}</description>
    <enclosure url="{{ post.audio_url }}" length="{{ post.audio_length }}" type="{{ post.audio_type }}" />
    <itunes:subtitle>{{ post.itunes_subtitle | xml_escape }}</itunes:subtitle>
    <itunes:summary>{{ post.itunes_summary | xml_escape }}</itunes:summary>
    <itunes:author>{{ post.itunes_author | xml_escape }}</itunes:author>
    <itunes:image href="{{ post.itunes_image }}" />
    <itunes:season>{{ post.itunes_season }}</itunes:season>
    <itunes:episode>{{ post.itunes_episode }}</itunes:episode>
    <itunes:title>{{ post.itunes_title | xml_escape }}</itunes:title>
    <itunes:duration>{{ post.itunes_duration }}</itunes:duration>
  </item>
  {% endfor %}
</channel>
</rss>
